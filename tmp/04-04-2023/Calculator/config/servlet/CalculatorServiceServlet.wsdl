    </operation>
  </binding>
  <service name="CalculatorServiceServlet">
    <port name="CalculatorServicePort" binding="tns:CalculatorServiceBinding">
      <soap:address location="http://localhost:8080/Calculator/calculator"/>
    </port>
  </service>
